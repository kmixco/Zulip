<% @hosts_fullstack.each do |host| -%>
define host{
       use              generic-host
       host_name        <%= host %>
       alias            <%= host %>
       address          <%= host %>
       hostgroups       all,non_aws_host,web,frontends,not_pageable_servers,postgresql,postgresql_primary
       }
<% end -%>

