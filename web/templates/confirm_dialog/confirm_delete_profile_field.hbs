{{#if (eq count 1)}}
    {{#tr}}
        This will delete the <z-profile-field-name></z-profile-field-name> profile field for 1 user.
        {{#*inline "z-profile-field-name"}}
        {{#if rendered_profile_field_name}}
        <strong class="profile_field_name rendered_markdown">{{rendered_markdown rendered_profile_field_name}}</strong>
        {{else}}
        <strong>{{profile_field_name}}</strong>
        {{/if}}
        {{/inline}}
    {{/tr}}
{{else}}
    {{#tr}}
        This will delete the <z-profile-field-name></z-profile-field-name> profile field for <z-count></z-count> users.
        {{#*inline "z-count"}}{{count}}{{/inline}}
        {{#*inline "z-profile-field-name"}}
        {{#if rendered_profile_field_name}}
        <strong class="profile_field_name rendered_markdown">{{rendered_markdown rendered_profile_field_name}}</strong>
        {{else}}
        <strong>{{profile_field_name}}</strong>
        {{/if}}
        {{/inline}}
    {{/tr}}
{{/if}}
