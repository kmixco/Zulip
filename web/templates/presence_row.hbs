<li data-user-id="{{user_id}}" class="user_sidebar_entry {{#if is_current_user}}user_sidebar_entry_me {{/if}} narrow-filter {{#if faded}} user-fade {{/if}}">
    <div class="selectable_sidebar_block">
        {{#unless user_list_style.WITH_AVATAR}}
            <span class="{{user_circle_class}} user_circle"></span>
        {{/unless}}
        <a class="user-presence-link"
          href="{{href}}"
          data-user-id="{{user_id}}"
          data-name="{{name}}">
            {{#if user_list_style.COMPACT}}
                <div class="user-name-and-status-emoji">
                    {{> user_full_name}}
                    {{> status_emoji status_emoji_info}}
                </div>
            {{/if}}
            {{#if user_list_style.WITH_STATUS}}
                <div class="user-name-and-status-wrapper">
                    <div class="user-name-and-status-emoji">
                        {{> user_full_name}}
                        {{> status_emoji status_emoji_info}}
                    </div>
                    <span class="status-text">{{status_text}}</span>
                </div>
            {{/if}}
            {{#if user_list_style.WITH_AVATAR}}
                <div class="user-name-and-status-wrapper with-avatar">
                    <div class="user-name-and-status-emoji with-avatar">
                        <div class="avatar-container">
                            <img class="small-avatar" src='{{small_avatar_url}}'/>
                            <span class="user_circle-background"></span>
                            <span class= "{{user_circle_class}} user_circle with-avatar"></span>
                        </div>
                        {{#if status_text}}
                            <span class="user-name with-status with-avatar"> {{> user_full_name}} </span>
                        {{else}}
                            <span class="user-name without-status with-avatar"> {{> user_full_name}} </span>
                        {{/if}}
                        <span class="status-emoji with-avatar"> {{> status_emoji status_emoji_info}} </span>
                    </div>
                    <span class="status-text with-avatar">{{status_text}}</span>
                </div>
            {{/if}}
        </a>
        <span class="unread_count {{#unless num_unread}}hide{{/unless}}">{{#if num_unread}}{{num_unread}}{{/if}}</span>
    </div>
    <span class="sidebar-menu-icon user-list-sidebar-menu-icon"><i class="zulip-icon zulip-icon-more-vertical" aria-hidden="true"></i></span>
</li>
