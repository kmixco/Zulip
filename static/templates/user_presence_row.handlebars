<li data-user-id="{{user_id}}" class="user_sidebar_entry {{#if num_unread}} user-with-count {{/if}} narrow-filter user_{{type}} {{#if faded}} user-fade {{/if}}">
    <div class="selectable_sidebar_block {{#if is_current_user}} current-user {{/if}} ">
        <span class="user-status-indicator"></span>
        <a class="user-presence-link"
          {{#unless is_current_user}} href="{{href}}" {{/unless}}
          data-user-id="{{user_id}}"
          data-name="{{name}}"
          title="{{title}}">
            {{name}}
            {{#if my_user_status}}
            <span class="my_user_status">{{my_user_status}}</span>
            {{/if}}
        </a>
        <span class="count"><span class="value">{{#if num_unread}}{{num_unread}}{{/if}}</span></span>
    </div>
    <span class="arrow"><i class="fa fa-chevron-down" aria-hidden="true"></i></span>
</li>
