<div class='pill' data-id='{{ id }}' tabindex=0>
    {{#if has_image}}
    <img class="pill-image" src={{img_src}} />
    {{/if}}
    <span class="pill-value">{{ display_value }}</span>
    <div class="exit" aria-label="{{t Remove pill }}">
        <span aria-hidden="true">&times;</span>
    </div>
</div>
