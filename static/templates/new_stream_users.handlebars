{{! Client-side Mustache template for rendering users in the stream creation modal.}}
<a href="#" class="subs_set_all_users">{{t "Check all" }}</a> |
<a href="#" class="subs_unset_all_users">{{t "Uncheck all" }}</a>
<input class="add-user-list-filter" name="user_list_filter" type="text" placeholder="{{t "Filter users" }}" value="{{filtered_text}}"/>
<div id="user-checkboxes">
  {{#each users}}
  {{#if this.filtered}}
      <label class="checkbox" for="{{this.email}}" data-name="{{this.email}}">
        <input type="checkbox" name="user" value="{{this.email}}" {{#if this.checked}}checked{{/if}}/> {{this.full_name}} ({{this.email}})
      </label>
  {{/if}}
  {{/each}}
</div>
