{{#with attachment}}
<tr class="uploaded_file_row" id="{{name}}" data-attachment-id="{{id}}">
    <td>
        <a type="submit" href="/user_uploads/{{path_id}}" target="_blank" rel="noopener noreferrer" title="{{t 'View file' }}">
            {{ name }}
        </a>
    </td>
    <td>{{ create_time_str }}</td>
    <td>
        {{#if messages }}
        <div class="attachment-messages">
            {{#each messages}}
            <a class="ind-message" href="/#narrow/id/{{ this.id }}">
                #{{ this.id }}
            </a>
            {{/each}}
        </div>
        {{/if}}
    </td>
    <td>{{ size_str }}</td>
    <td class="actions">
        <span class="edit-attachment-buttons tippy-zulip-tooltip" data-tippy-content="{{t 'Download file' }}" data-tippy-placement="top" aria-label="{{t 'Download file' }}">
            <a type="submit" href="/user_uploads/{{path_id}}" class="btn" id="download_attachment" download>
                <i class="fa fa-download sea-green" aria-hidden="true"></i>
            </a>
        </span>
        <span class="edit-attachment-buttons tippy-zulip-tooltip" data-tippy-content="{{t 'Delete file' }}" data-tippy-placement="top" aria-label="{{t 'Delete file' }}">
            <button type="submit" class="button small no-style remove-attachment" data-attachment="{{id}}">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
            </button>
        </span>
    </td>
</tr>
{{/with}}
