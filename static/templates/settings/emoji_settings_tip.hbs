{{#if is_guest}}
    <div class='tip'>{{t "Guests cannot edit custom emoji." }}</div>
{{else}}
    {{#if (eq realm_add_custom_emoji_policy POLICY_ADMINS_ONLY)}}
    <div class='tip'>{{t "Only organization administrators can add custom emoji in this organization." }}</div>
    {{else if (eq realm_add_custom_emoji_policy POLICY_FULL_MEMBERS_ONLY)}}
    <div class='tip'>{{t "Only organization administrators and full members can add custom emoji in this organization." }}</div>
    {{else}}
    <div class='tip'>{{t "Any member of this organization can add custom emoji." }}</div>
    {{/if}}
{{/if}}
