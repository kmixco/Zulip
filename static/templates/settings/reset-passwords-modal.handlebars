<div id="reset-passwords-modal" class="modal modal-bg hide fade" tabindex="-1" role="dialog" aria-labelledby="reset_passwords_modal_label" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="{{t 'Close' }}"><span aria-hidden="true">&times;</span></button>
        <h3 id="reset_passwords_modal_label">{{t "Reset all passwords" }} <span class="realm_name"></span></h3>
    </div>
    <div class="modal-body">
        <p>{{t "This action is permanent and cannot be undone. All users will be logged out and must reset their password to log in again" }}</p>
    </div>
    <div class="modal-footer">
        <button type="button" class="button rounded" data-dismiss="modal">{{t "Cancel" }}</button>
        <button type="button" class="button rounded btn-danger" id="do_reset_passwords_button">{{t "Reset all passwords" }}</button>
    </div>
</div>
