{
    "compilerOptions": {
        /* Basic options */
        "target": "es5",
        "module": "es6",
        "jsx": "preserve",
        "sourceMap": true,
        "removeComments": false,

        /* Strict type-checking */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "alwaysStrict": true,

        /* Additional checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
    }
}
